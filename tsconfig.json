{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es5", "es6", "es7", "es2015"]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
